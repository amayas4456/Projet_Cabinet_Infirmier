<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:m="http://www.univ-grenoble-alpes.fr/l3miage/medical"
           targetNamespace="http://www.univ-grenoble-alpes.fr/l3miage/medical"
           elementFormDefault="qualified">

    <!-- Elément racine -->
    <xs:element name="Cabinet" type="m:Cabinet"/>

    <!-- Type Complexe pour Cabinet -->
    <xs:complexType name="Cabinet">
        <xs:sequence>
            <xs:element name="nom" type="xs:string"/>
            <xs:element name="adresse" type="m:Adresse"/>
            <!-- Reference to global 'infirmiers' element -->
            <xs:element ref="m:infirmiers"/>
            <xs:element name="patients" type="m:Patients"/>
        </xs:sequence>
    </xs:complexType>

    <!-- Type Complexe pour Adresse -->
    <xs:complexType name="Adresse">
        <xs:sequence>
            <xs:element name="etage" type="xs:int" minOccurs="0"/>
            <xs:element name="numero" type="xs:int" minOccurs="0"/>
            <xs:element name="rue" type="xs:string"/>
            <xs:element name="ville" type="xs:string"/>
            <xs:element name="codePostal">
                <xs:simpleType>
                    <xs:restriction base="xs:int">
                        <xs:pattern value="\d{5}"/> <!-- Code postal à 5 chiffres -->
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

    <!-- Liste des Infirmiers (élément global avec contrainte d'unicité) -->
    <xs:element name="infirmiers">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="infirmier" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="nom" type="xs:string"/>
                            <xs:element name="prenom" type="xs:string"/>
                            <xs:element name="photo" type="m:Photo"/> <!-- Using the defined Photo type -->
                        </xs:sequence>
                        <!-- Attribute for unique ID -->
                        <xs:attribute name="id" type="xs:int" use="required"/>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
        <!-- Unique constraint for the 'nom' element with namespace prefix -->
        <xs:unique name="uniqueInfirmierID">
            <xs:selector xpath="m:infirmier"/>
            <xs:field xpath="@id"/>
        </xs:unique>
    </xs:element>

    <!-- Liste des Patients -->
    <xs:complexType name="Patients">
        <xs:sequence>
            <xs:element name="patient" type="m:Patient" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <!-- Type Complexe pour Patient -->
    <xs:complexType name="Patient">
        <xs:sequence>
            <xs:element name="nom" type="xs:string"/>
            <xs:element name="prenom" type="xs:string"/>
            <xs:element name="sexe" type="m:Sexe"/>
            <xs:element name="naissance" type="xs:date"/>
            <xs:element name="numero" type="m:NumeroSS"/>  <!-- Restriction pour NSS en bas -->
            <xs:element name="adresse" type="m:Adresse"/>
            <xs:element name="visites" type="m:Visites" maxOccurs="unbounded"/> <!-- un patient peut avoir plusieurs visites -->
        </xs:sequence>
    </xs:complexType>

    <!-- Type Complexe pour Visites -->
    <xs:complexType name="Visites">
        <xs:sequence>
            <xs:element name="Visite" type="m:Visite" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <!-- Type Complexe pour Visite -->
    <xs:complexType name="Visite">
        <xs:sequence>
            <xs:element name="date" type="xs:date"/>
            <xs:element name="intervenant" type="xs:int" minOccurs="0"/>
            <xs:element name="actes" type="m:Actes" minOccurs="0" maxOccurs="unbounded"/> <!-- une visite peut avoir plusieurs actes -->
        </xs:sequence>
    </xs:complexType>

    <!-- Type Complexe pour Actes -->
    <xs:complexType name="Actes">
        <xs:sequence>
            <xs:element name="acte" type="m:Acte" maxOccurs="unbounded"/> <!-- Plusieurs actes possibles -->
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Acte">
        <xs:simpleContent>
            <xs:extension base="xs:string"> <!-- Texte libre pour description -->
                <xs:attribute name="id" type="xs:string" use="required"/> <!-- Attributs -->
                <xs:attribute name="type" type="m:TypeSoin" use="required"/>
                <xs:attribute name="cle" type="m:CleType" use="required"/>
                <xs:attribute name="coef" type="xs:decimal"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <!-- Enumération pour Sexe -->
    <xs:simpleType name="Sexe">
        <xs:restriction base="xs:string">
            <xs:enumeration value="M"/>
            <xs:enumeration value="F"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Enumération pour TypeSoin -->
    <xs:simpleType name="TypeSoin">
        <xs:restriction base="xs:string">
            <xs:enumeration value="pi"/> <!-- Prélèvements et Injections -->
            <xs:enumeration value="pc"/> <!-- Pansements Courants -->
            <xs:enumeration value="pl"/> <!-- Pansements Lourds -->
            <xs:enumeration value="sd"/> <!-- Soins à Domicile -->
        </xs:restriction>
    </xs:simpleType>

    <!-- Enumération pour Clé NGAP -->
    <xs:simpleType name="CleType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="AMI"/> <!-- Acte Médico-Infirmier -->
            <xs:enumeration value="AIS"/> <!-- Acte de Soins Infirmiers -->
            <xs:enumeration value="DI"/>  <!-- Démarche de Soins Infirmiers -->
        </xs:restriction>
    </xs:simpleType>

    <!-- Type restreint pour Numéro de Sécurité Sociale -->
    <xs:simpleType name="NumeroSS">
        <xs:restriction base="xs:string">
            <xs:pattern value="[1-2]\d{2}[0-9]{2}[0-9]{2}[0-9]{3}[0-9]{3}[0-9]{2}"/>
            <xs:length value="15"/>
        </xs:restriction>
    </xs:simpleType>

    <!-- Déclaration du type simple "Photo" avec une contrainte de motif -->
    <xs:simpleType name="Photo">
        <xs:restriction base="xs:string">
            <xs:pattern value=".*\.(png|jpg)"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>
